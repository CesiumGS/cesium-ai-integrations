{
  "name": "cesium-mcp",
  "version": "1.0.0",
  "description": "Monorepo for Cesium MCP servers",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "pnpm run build:shared && pnpm run build:camera && pnpm run build:entity && pnpm run build:animation && pnpm run build:geolocation && pnpm run build:test-applications",
    "build:shared": "pnpm --filter @cesium-mcp/shared build",
    "build:camera": "pnpm --filter @cesium-mcp/camera-server build",
    "build:entity": "pnpm --filter @cesium-mcp/entity-server build",
    "build:animation": "pnpm --filter @cesium-mcp/animation-server build",
    "build:geolocation": "pnpm --filter @cesium-mcp/geolocation-server build",
    "build:test-applications": "pnpm --filter @cesium-mcp/test-applications build",
    "dev:camera": "pnpm --filter @cesium-mcp/camera-server dev",
    "dev:animation": "pnpm --filter @cesium-mcp/animation-server dev",
    "start:web": "pnpm --filter @cesium-mcp/test-applications start:web",
    "clean": "pnpm -r run clean",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "pnpm run format:check && pnpm run lint"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "cesium",
    "camera",
    "geolocation",
    "3d",
    "geospatial"
  ],
  "author": "",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "overrides": {
      "@modelcontextprotocol/sdk>ajv": ">=8.18.0",
      "eslint>ajv": "^6.12.6",
      "@eslint/eslintrc>ajv": "^6.12.6",
      "minimatch": ">=10.2.1",
      "hono": ">=4.11.10"
    },
    "auditConfig": {
      "ignoreCves": [
        "CVE-2025-69873"
      ]
    }
  },
  "devDependencies": {
    "@cesium/eslint-config": "^13.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  }
}
